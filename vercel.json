{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    // Không rewrite thư mục assets
    { "src": "/assets/(.*)", "dest": "/assets/$1" },

    // SPA fallback cho mọi route khác
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
